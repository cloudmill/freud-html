extends ../layouts/master

include ../components/breadcrumbs
include ../components/buttons
include ../components/cards
include ../components/block-titles
include ../components/picture

block content

  section.section--first.section--bottom
    .container
      +breadcrumbs(items = ['Магазин', 'Вина'] page = 'Вино Masseto, Toscana IGT')

      .product-top

        .product-top-mob.only-mobile(data-aos='fade-up')

          h1.product-top-ttl Вино Masseto, Toscana IGT

          .product-top-availability.out-of-stock Нет в наличии
          .product-top-code Артикул 
            span 022234

        .product-top-picture(data-aos='fade-up')
          .product-top-gallery
            .swiper-container#gallery-slider
              .swiper-wrapper
                - for (c=0;c<5;c++)
                  .swiper-slide
                    +picture(file='product-2')

            button.button--clean.product-top-gallery__control.only-mobile#gallery-slider-next
              +arrow-right

          .product-top-img
            .swiper-container#product-slider
              .swiper-wrapper
                - for (c=0;c<5;c++)
                  .swiper-slide.product-top-img__wine
                    +picture(file='product-2')

            .product-top-labels.only-mobile
              .catalog-card__labels-item.label-black NEW
              .catalog-card__labels-item.label-brown limited

        .product-top-info(data-aos='fade-up')

          .product-top-labels.only-desktop
            .catalog-card__labels-item.label-black NEW
            .catalog-card__labels-item.label-brown limited

          .product-top-code.only-desktop Артикул 
            span 022234

          h1.product-top-ttl.only-desktop Вино Masseto, Toscana IGT

          .product-top-availability.out-of-stock.only-desktop Нет в наличии

          dl.product-top-table

            .product-top-table__row
              dt.product-top-table__name Производитель
              .product-top-table__line
              dd.product-top-table__value Ornellaia

            .product-top-table__row
              dt.product-top-table__name Цвет
              .product-top-table__line
              .product-top-table__value Красное

            .product-top-table__row
              dt.product-top-table__name Сахар
              .product-top-table__line
              dd.product-top-table__value Сухое

            .product-top-table__row
              dt.product-top-table__name Страна
              .product-top-table__line
              dd.product-top-table__value
                +italy-flag.flag-ico
                |Италия

            .product-top-table__row
              dt.product-top-table__name Регион
              .product-top-table__line
              dd.product-top-table__value Трентино-Альто Адидже

            .product-top-table__row
              dt.product-top-table__name Год
              .product-top-table__line
              dd.product-top-table__value 2009

            .product-top-table__row
              dt.product-top-table__name Крепость
              .product-top-table__line
              dd.product-top-table__value 15%

            .product-top-table__row
              dt.product-top-table__name Объем
              .product-top-table__line
              dd.product-top-table__value 750 мл

          button.button--clean.product-more-btn Все характеристики

          .product-top-price.catalog-card__price
            div
              span.current 165 750 ₽
              span.old 200 820 ₽

          .product-top-buttons
            +brown-button.product-button-cart(data-popup-button='5')
              |Добавить в корзину

            button.button--clean.product-button-fav
              +favorites-icon

          .product-info-bottom
            .product-info-bottom__col
              .product-info-bottom__ttl Самовывоз из магазина
              .product-info-bottom__txt Бесплатно, сегодня


      .product-body

        article.product-body__block(data-aos='fade-up')

          h2.h4.title-font.product-body__ttl Описание

          h3.product-body__subttl Дегустационные характеристики

          p.product-body__txt Светло-соломенный c блеском цвет. Восхитительный яркий аромат, богатый тонами цитрусовых, персика и дыни. Вкус среднетелый, с прекрасно сбалансированной кислотностью и легкой пикантной горчинкойв послевкусии

          .gastronomy-block

            h3.product-body__subttl Гастрономия

            p.product-body__txt Прекрасно само по себе. Также отлично подойдет к жареному мясу, мясу на гриле, пряным блюдам, дичи и выдержанным сырам

            .product-gastronomy
              -
                const gastronomy = [
                  'Красное мясо',
                  'Белое мясо',
                  'Рыба',
                  'Сыры',
                  'Морепродукты'
                ]
              
              each item, index in gastronomy
                .product-gastronomy__item
                  .product-gastronomy__ico
                    +gastronomy-ico(index)
                  | #{item}

          h3.product-body__subttl Стилистика

          p.product-body__txt Красное — мощное, насыщенное, выдержанное в дубе

        
        .product-body__block(data-aos='fade-up')
          h2.h4.title-font.product-body__ttl Характеристики

          dl.product-body-info

            .product-body-info__col

              .product-top-table__row
                dt.product-top-table__name Производитель
                .product-top-table__line
                dd.product-top-table__value Ornellaia

              .product-top-table__row
                dt.product-top-table__name Цвет
                .product-top-table__line
                .product-top-table__value Красное

              .product-top-table__row
                dt.product-top-table__name Сахар
                .product-top-table__line
                dd.product-top-table__value Сухое

              .product-top-table__row
                dt.product-top-table__name Страна
                .product-top-table__line
                dd.product-top-table__value
                  +italy-flag.flag-ico
                  |Италия

              .product-top-table__row
                dt.product-top-table__name Регион
                .product-top-table__line
                dd.product-top-table__value Трентино-Альто Адидже

              .product-top-table__row
                dt.product-top-table__name Год
                .product-top-table__line
                dd.product-top-table__value 2009

              .product-top-table__row
                dt.product-top-table__name Крепость
                .product-top-table__line
                dd.product-top-table__value 15%

              .product-top-table__row
                dt.product-top-table__name Объем
                .product-top-table__line
                dd.product-top-table__value 750 мл

            .product-body-info__col

              .product-top-table__row
                dt.product-top-table__name Категория
                .product-top-table__line
                dd.product-top-table__value Indicazione Geografica Tipica (IGT)

              .product-top-table__row
                dt.product-top-table__name Декантация

                  .tooltip
                    +tooltipIco
                    .tooltip__txt Декантирование — это переливание вина в графин, у которого может быть две разные цели: снятие вина с осадка и насыщение вина кислородом

                .product-top-table__line
                dd.product-top-table__value Аэрация

              .product-top-table__row
                dt.product-top-table__name Потенциал хранения
                .product-top-table__line
                dd.product-top-table__value 15-25

              .product-top-table__row
                dt.product-top-table__name Выдержан в ёмкости
                .product-top-table__line
                dd.product-top-table__value Дубовая бочка

              .product-top-table__row
                dt.product-top-table__name Аппелласьон
                .product-top-table__line
                dd.product-top-table__value Toscana

              .product-top-table__row
                dt.product-top-table__name Тип вина
                .product-top-table__line
                dd.product-top-table__value Тихое

              .product-top-table__row
                dt.product-top-table__name Сорт винограда
                .product-top-table__line
                dd.product-top-table__value Мерло

        .product-body__block(data-aos='fade-up')
          h2.h4.title-font.product-body__ttl Способы оплаты и получения заказа

          .product-body__payment

            .product-body__payment-col
              .product-body__payment-ttl
                +paroduct-pay-1
                |Получение заказа
              .product-body__payment-txt Самовывоз из клуба «Профессор Фрейд» по адресу г. Санкт-Петербург, ул. Малая Морская, дом 18
              +read-more-btn(data-popup-button='10' btn)
                |Показать на карте

            .product-body__payment-col
              .product-body__payment-ttl
                +paroduct-pay-2
                |Оплата
              .product-body__payment-txt Банковской картой через мобильный терминал или наличными при самовывозе
              +read-more-btn(data-popup-button='18' btn)
                |Доставка и оплата

        .product-body__block(data-aos='fade-up')
          form.product-body-consult(novalidate)
            h2.h4.title-font.product-body__ttl Получите консультацию специалиста

            .product-body-consult__row
              label.form__label
                .form__field-name Ваше имя
                input.form__input(type='text' data-input-title='name' placeholder='Введите ваше имя' required)

              label.form__label
                .form__field-name Телефон
                input.form__input(type='tel' placeholder='Введите номер телефона' required)

            +brown-border-button(type='')
              |Получить консультацию

            .checkbox
              label.checkbox__label
                input.checkbox__input(type="checkbox" checked required)
                .checkbox__box
                  +checkbox-svg.checkbox__svg

              .checkbox__caption
                |Нажимая на кнопку «Продолжить», вы соглашаетесь #[br]
                a(href="") с политикой конфиденциальности

  -
    let smallTitle = 'Другие товары Gurkha';
    let nobtn = true;
    sectionBottom = true;
  include ../components/sections/shop-section

  -
    smallTitle = 'Вы смотрели ранее';
    nobtn = true;
    sectionBottom = true;
  include ../components/sections/shop-section

  section.section--bottom
    include ../components/sections/articles-section
    
block modals
  include ../components/popups/in-cart-popup
  //- include ../components/popups/brand-popup
  include ../components/popups/pickup-popup
  include ../components/popups/delivery-popup
  include ../components/popups/consult-success-popup

block scripts
  script(src="https://api-maps.yandex.ru/2.1/?apikey=9eaf2d45-34a5-4620-bac6-0482e9335845&lang=ru_RU" type="text/javascript")
