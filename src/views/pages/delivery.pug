extends ../layouts/master

include ../components/breadcrumbs
include ../components/buttons
include ../components/cards
include ../components/block-titles
include ../components/picture

block content

  section.section--first.section--bottom
    .container
      +breadcrumbs(page = 'Доставка и оплата')

      .contacts-block
        .contacts-block__top
          +big-titles.only-desktop(subttl='профессор фрейд' ttl='Доставка и оплата' h1)
          +big-titles.only-mobile(subttl='профессор фрейд' ttl='Доставка' ttl2='и оплата')

          .scroll-down.only-desktop(data-aos='fade-up')
            .scroll-down__line

      .delivery-row(data-aos='fade-up')
        .delivery-row__item
          .delivery-row__item-ttl Самовывоз

          .cart-pickup__info-item
            +place-ico.cart-pickup__svg
            div
              .cart-pickup__info-ttl Адрес
              .cart-pickup__info-txt г. Санкт-Петербург, ул. Малая Морская, дом 18

              button.button--clean.delivery-row__map-link(data-popup-button='10') Показать на карте

          .cart-pickup__info-item
            +clock-ico.cart-pickup__svg
            div
              .cart-pickup__info-ttl Часы работы
              .cart-pickup__info-txt ПН – ЧТ, 12:00 – 00:00 #[br] ПТ – СБ, 12:00 – 01:00 #[br] ВС, 13:00 – 23:00

          .cart-pickup__info-item
            +attention-ico.cart-pickup__svg
            div
              .cart-pickup__info-ttl Алкоголь можно забрать до 22:00

        .delivery-row__item
          .delivery-row__item-ttl Доставка курьером

          .delivery-row__txt Бесплатная доставка по Санкт-Петербургу в пределах КАД от 10&nbsp;000₽.
          .delivery-row__txt Доставка по Ленинградской области и РФ - рассчитывается индивидуально.
          .delivery-row__txt  Точную стоимость доставки сообщит менеджер. Доставка разрешена не для всех товаров из каталога.

        .delivery-row__item
          .delivery-row__item-ttl Оплата

          .delivery-row__txt Банковской картой через мобильный терминал или наличными при самовывозе

          .delivery-row-icons
            img(src="assets/images/icons/payment-1.png", alt="")
            img(src="assets/images/icons/payment-2.png", alt="")
            img(src="assets/images/icons/payment-3.png", alt="")

  include ../components/sections/subscribe-section

block modals
  include ../components/popups/pickup-popup
  include ../components/popups/subscribe-success-popup

block scripts
  script(src="https://api-maps.yandex.ru/2.1/?apikey=9eaf2d45-34a5-4620-bac6-0482e9335845&lang=ru_RU" type="text/javascript")
