extends ../layouts/master

include ../components/buttons
include ../components/cards
include ../components/breadcrumbs
include ../components/block-titles
include ../components/picture

block variables
  - var shopNav = true

block content

  section.section--first
    .container
      +breadcrumbs(page = "Магазин")

      .shop-page-head

        +big-titles.shop-page-head__titles.only-desktop(subttl=`более 1000 товаров  в наличии` ttl='Магазин' txt='В нашем интернет-магазине вы найдете коллекцию лучших сигар,' txt2='терпкого алкоголя и ярких вин' h1)

        +big-titles.shop-page-head__titles.only-mobile(subttl=`более 1000 товаров  в наличии` ttl='Магазин' txt='В нашем интернет-магазине вы найдете' txt2='коллекцию лучших сигар, терпкого' txt3='алкоголя и ярких вин')

        .shop-page-head__categories

          -
            const cards = [
              {file: 'shop-category-1', ttl: 'Сигары'},
              {file: 'shop-category-2', ttl: 'Сигариллы'},
              {file: 'shop-category-3', ttl: 'Хьюмидоры'},

              {file: 'shop-category-5', ttl: 'Наборы'},
              {file: 'shop-category-7', ttl: 'Аксессуары'},
              {file: 'shop-category-4', ttl: 'Крепкие напитки'},
              {file: 'shop-category-6', ttl: 'Вина'},
            ]

          each item in cards
            a.shop-page-head__card(href="" data-aos='fade-up')
              .shop-page-head__card-img
                +picture(file=`${item.file}`)
              .shop-page-head__card-ttl.h4 #{item.ttl}

  -
    const smallTitle = 'Вы смотрели ранее';
    const nobtn = true;
  include ../components/sections/shop-section

  section.section--bottom
    include ../components/sections/articles-section

block modals
  include ../components/popups/in-cart-popup
  include ../components/popups/search-popup
