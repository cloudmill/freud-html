extends ../layouts/master

include ../components/breadcrumbs
include ../components/buttons
include ../components/cards
include ../components/block-titles
include ../components/picture

block content

  section.section--first.section--grey-extra
    .container
      +breadcrumbs(items = ['О клубе'] page = 'Винотека')

      .about-block(data-aos='fade-up')
        .section-bg-photo.vine-section-bg
          +big-titles.white-ttl(subttl='профессор фрейд' ttl='Винотека' h1)

          .scroll-down(data-aos='fade-up')
            .scroll-down__line

        .nums-block-bottom(data-aos='fade-up')

          -
            const nums = [
              {num: '12', txt: 'Посадочных мест'},
              {num: '>250', txt: 'Наименований вин'},
              {num: '>60', txt: 'Брендов крепкого алкоголя'},
            ]

          each item in nums
            .nums-block-bottom__col
              .nums-block-bottom__big.h1.title-font #{item.num}
              .nums-block-bottom__txt #{item.txt}

  section.section.section--top
    .container
      .benefits-block.only-desktop
        .benefits-cell(data-aos='fade-up')

          .big-titles
            .big-titles__subttl винная культура
            h2.big-titles__ttl.h1 Концепция #[br] bar&shop

        -
          const benefits = [
            {ttl: 'Профессиональный сомелье', txt: 'На сомелье  поможет выбрать напиток по вашему запросу, исходя из индивидуальных предпочтений'},
            {ttl: 'Прекрасный', ttl2: 'выбор вин', txt: 'Ассортимент винотеки — это известные во всем мире вина, великолепные жемчужины, так полюбившиеся истинным ценителям'},
            {ttl: 'Элитный', ttl2: 'крепкий алкоголь', txt: 'Мы отбираем лучшие напитки, которые имеют почитателей по всему миру'},
            {ttl: 'Легкие закуски', txt: 'Концепция Bar&Shop позволяет насладиться вкусом напитка в сочетании с авторскими закусками'},
          ]

        each item, index in benefits
          .benefits-cell.cell-list(data-aos='fade-up')
            +vine-benefit-ico(`${index}`)

            .benefits-cell__info
              .benefits-cell__ttl.h3 #{item.ttl}
                if (item.ttl2)
                  br
                  | #{item.ttl2}

              .benefits-cell__txt #{item.txt}

      
      .benefits-block.only-mobile
        .benefits-cell(data-aos='fade-up')

          .big-titles
            .big-titles__subttl винная культура
            h2.big-titles__ttl.h1 Концепция #[br] bar&shop

        -
          const benefitsMob = [
            {ttl: 'Профессиональный сомелье', txt: 'На сомелье  поможет выбрать напиток по вашему запросу, исходя из индивидуальных предпочтений'},
            {ttl: 'Прекрасный выбор вин', txt: 'Ассортимент винотеки — это известные во всем мире вина, великолепные жемчужины, так полюбившиеся истинным ценителям'},
            {ttl: 'Элитный', ttl2: 'крепкий алкоголь', txt: 'Мы отбираем лучшие напитки, которые имеют почитателей по всему миру'},
            {ttl: 'Легкие закуски', txt: 'Концепция Bar&Shop позволяет насладиться вкусом напитка в сочетании с авторскими закусками'},
          ]

        each item, index in benefitsMob
          .benefits-cell.cell-list(data-aos='fade-up')
            +vine-benefit-ico(`${index}`)

            .benefits-cell__info
              .benefits-cell__ttl.h3 #{item.ttl}
                if (item.ttl2)
                  br
                  | #{item.ttl2}

              .benefits-cell__txt #{item.txt}

  section.humidor-section
    .container
      .humidor-block.section--grey
        .humidor-block__img(data-aos='fade-up')
          +picture(file=`vine-block`)

        .humidor-block__col
          +big-titles(subttl='клуб профессор фрейд' ttl='Винотека' txt='Дополнительным украшением винотеки является широкая линейка крепкого алкоголя, собранная из лучших представителей крепленых вин, коньяка, виски и рома, граппы.' txtp='Любой блэнд из всех представленных, можно взять прямо с полки и не только купить с собой, но и выпить здесь же, в уютных интерьерах под расслабляющую лаунж музыку, дополняя напитки закусками от шеф-повара')

  section.section.lounge-section
    .container
      .two-cols-block
        .two-cols-block__col

          .cabinet-col.two-cols-block__pl

            +big-titles.only-desktop(ttl='Шеф-' ttl2='сомелье' subttl='Анастасия Палкина')
            +big-titles.only-mobile(ttl='Шеф-сомелье' subttl='Анастасия Палкина')

            .two-cols-block__txt(data-aos='fade-up')
              |Концепция Bar&Shop, винотеки prof. FREUD — отличная возможность насладиться вкусом купленного напитка в сочетании с авторскими закусками от шеф-повара

          .only-desktop(data-aos='fade-up')
            +picture(file='vine-col-1')
          .only-mobile(data-aos='fade-up')
            +picture(file='vine-col-2')

        .two-cols-block__col

          .only-desktop(data-aos='fade-up')
            +picture(file='vine-col-2')
          .only-mobile(data-aos='fade-up')
            +picture(file='vine-col-1')

          .txt-block(data-aos='fade-up')
            .two-cols-block__txt В свою очередь я, шеф-сомелье, рада поведать об особенностях наших вин, специфике регионов их происхождения, истории отдельного винного дома

            +read-more-btn
              |смотреть каталог

  include ../components/sections/certificate-section

  -
    let newTitle = {ttl: 'Онлайн-каталог алкоголя', subttl: 'полный ассортимент'};
    let nobtn = true;
    let newBtn = 'Смотреть все товары';
  include ../components/sections/shop-section

  include ../components/sections/subscribe-section

block modals
  include ../components/popups/certificate-popup
  include ../components/popups/in-cart-popup
  include ../components/popups/subscribe-success-popup
