extends ../layouts/master

include ../components/buttons
include ../components/cards
include ../components/breadcrumbs
include ../components/block-titles
include ../components/picture

block content

  section.section--first
    .container
      .category-page-head
        +breadcrumbs(items = ['Магазин'] page = 'Результаты поиска')

      .category-top.search-top(data-aos='fade-up')
        .category-top__line
          
          .category-title-block
            h1.category-title.h2 Результаты поиска
            .category-items-count 4 товара

          .category-search
            input.category-search__input(type='search' placeholder='Поиск по каталогу')
            +search-icon

      .cart-empty-block(data-aos='fade-up')
        .cart-empty-block__ttl(data-aos='fade-up') По запросу «
          span Кубинская сигара
          |» ничего не найдено
        .cart-empty-block__txt(data-aos='fade-up') Повторите поиск или уточните наличие по телефону
        +brown-border-link.cart-empty-block__btn(data-aos='fade-up')
          |Перейти в каталог


  -
    const smallTitle = 'Рекомендуем';
    const nobtn = true;
  include ../components/sections/shop-section


  section.section--bottom
    .container
      +small-titles(ttl='Другие категории товаров')

      .categories-slider.controls-out(data-aos='fade-up')
        .swiper-container#categories-slider
          .swiper-wrapper
            -
              const cards = [
                {file: 'shop-category-1', ttl: 'Сигары'},
                {file: 'shop-category-2', ttl: 'Сигариллы'},
                {file: 'shop-category-1', ttl: 'Хьюмидоры'},
              ]
            each item in cards
              .swiper-slide
                a.shop-page-head__card(href="")
                  .shop-page-head__card-img
                    +picture(file=`${item.file}`)
                  .shop-page-head__card-ttl.h4 #{item.ttl}

        .controls-out__container.only-desktop
          +control-left#categories-slider-prev
          +control-right#categories-slider-next

block modals
  include ../components/popups/in-cart-popup
